<!DOCTYPE html>
<html>
  <head>
    <title>Blockaction</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="//cdn.muicss.com/mui-0.9.41/css/mui.min.css" rel="stylesheet" type="text/css" />
    <script src="//cdn.muicss.com/mui-0.9.41/js/mui.min.js"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="mui-appbar mui--appbar-min-height">
        <div class="container">
            <div class="left">
                <%= image_tag path="logo.png" %>
            </div>
            <div class="right">
                <% if holder_signed_in? %>
                  HOLDER: Welcome, <strong><%= current_holder.email[0..8] %></strong>.
                  <%= link_to 'Edit profile', edit_holder_registration_path, :class => 'mui-btn mui-btn--primary mui-btn--small' %>
                  <%= link_to "Logout", destroy_holder_session_path, method: :delete, :class => 'mui-btn mui-btn--primary mui-btn--small'  %>
                <% elsif admin_signed_in? %>
                admin: Logged in as <strong><%= current_admin.email %></strong>.
                <%= link_to 'Edit profile', edit_admin_registration_path, :class => 'mui-btn mui-btn--primary mui-btn--small' %>
                <%= link_to "Logout", destroy_admin_session_path, method: :delete, :class => 'mui-btn mui-btn--primary mui-btn--small'  %>
                <% else %>
                  <%= link_to "Sign up", new_holder_registration_path, :class => 'mui-btn mui-btn--primary mui-btn--small'  %>
                  <%= link_to "Login", new_holder_session_path, :class => 'mui-btn mui-btn--primary mui-btn--small'  %>
                <% end %>
            </div>
        </div>
    </div>
    <div class="container">

            <% if notice %>
              <p class="alert alert-success"><%= notice %></p>
            <% end %>
            <% if alert %>
              <p class="alert alert-danger"><%= alert %></p>
            <% end %>
        <%= yield %>
    </div>
  </body>
</html>
