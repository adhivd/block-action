<p id="notice"><%= notice %></p>

<h1>Lawsuits</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Eligibility</th>
      <th>Completed</th>
      <th>Settlement</th>
      <th>Deadline</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lawsuits.each do |lawsuit| %>
      <tr>
        <td><%= lawsuit.name %></td>
        <td><%= lawsuit.description %></td>
        <td><%= lawsuit.eligibility %></td>
        <td><%= lawsuit.completed %></td>
        <td><%= lawsuit.settlement %></td>
        <td><%= lawsuit.deadline %></td>
        <td><%= lawsuit.user %></td>
        <td><%= link_to 'Show', lawsuit %></td>
        <td><%= link_to 'Edit', edit_lawsuit_path(lawsuit) %></td>
        <td><%= link_to 'Destroy', lawsuit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

